<%- include layout/head.ejs %>
    <%- include layout/main_sidebar.ejs %>

        <!-- MAIN PAGE CONTENT START -->
        <main class="mdl-layout__content mdl-color--white">
            <div class="entertainer-content">
                <div class="mdl-grid back-end-content">

                  <div class="extra-button mdl-cell mdl-cell--12-col">
                      <a data-target="#dialogAddEmployee" class="mdl-button mdl-js-button mdl-button--fab mdl-js-ripple-effect mdl-button--colored no-shadow modal-trigger">
                          <i class="material-icons">add</i>
                      </a>
                  </div>

                  <div class="entertainer-layout">
                      <div class="entertainer-content">
                        <!-- Pie Chart -->
                        <!--<div class="mdl-grid" style="mdl-cell mdl-cell--12-col">
                            <div class="mdl-cell mdl-cell--4-col mdl-cell--2-col-tablet">
                                <label class="control-label">Employee Chart By Gender</label>
                                <canvas id="employeeBarChart"></canvas>
                            </div>
                        </div>-->

                        <div class="mdl-grid">
                            <div class="mdl-cell mdl-cell--4-col mdl-cell--2-col-tablet">
                                <label class="control-label">Filter by Role</label>
                                <select id="employeeFilterRole" class="form-control" required="required">

                                </select>
                            </div>

                          <div class="mdl-cell mdl-cell--4-col mdl-cell--2-col-tablet">
                              <label class="control-label">Filter by Status</label>
                              <select id="employeeFilterStatus" class="form-control" required="required">

                              </select>
                          </div>

                        </div>

                        <div class="mdl-grid">
                            <div class="mdl-cell mdl-cell--12-col-desktop mdl-cell--8-col-tablet ">
                                <button type="button" onclick="return LoadAllEmployees();" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent mdl-color-text--white no-shadow"> Reset Filter </button>
                            </div>
                        </div>

                          <table id="tblEmployees" class="mdl-data-table mdl-js-data-table">
                              <!-- class="mdl-data-table mdl-js-data-table" -->
                              <thead>
                                  <tr>
                                      <th class="mdl-data-table__cell--non-numeric">ID Number</th>
                                      <th class="mdl-data-table__cell--non-numeric">Name</th>
                                      <th class="mdl-data-table__cell--non-numeric">Phone Number</th>
                                      <th class="mdl-data-table__cell--non-numeric">Employee Code</th>
                                      <th class="mdl-data-table__cell--non-numeric">View</th>

                                  </tr>
                              </thead>
                              <tbody>

                              </tbody>
                          </table>
                          <!-- /block -->

                          <div hidden class="alert-info" style="overflow:auto;height:20px;">
                              <span class="label label-default" id="lbSelectedEmployee"></span>
                          </div>

                        <!-- Pie Charts -->
                        <br><br>
                        <div class="mdl-grid mdl-cell mdl-cell--12-col">
                            <div class="mdl-cell mdl-cell--6-col mdl-cell--3-col-tablet">
                                <label class="control-label"><strong>Employee Chart By Gender</strong></label>
                                <canvas id="employeeBarChartGender"></canvas>
                            </div>

                            <div class="mdl-cell mdl-cell--6-col mdl-cell--3-col-tablet">
                                <label class="control-label"><strong>Employee Chart By Role</strong></label>
                                <canvas id="employeeBarChartRole"></canvas>
                            </div>
                        </div>

                      </div>
                  </div>


                    <!-- Dialog -->
                    <% include partials/view/dialogViewEmployee.ejs %>
                    <% include partials/add/dialogAddEmployee.ejs %>

                </div>
            </div>


        </main>
        <!-- MAIN PAGE CONTENT END -->
        <script type="text/javascript" src="/controllers/staff.js"></script>

        <%- include layout/footer.ejs %>
