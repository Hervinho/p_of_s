<!-- The Modal  dialogAddProduct -->
<div id="dialogAddProduct" class="form-modal">
    <div class="form-modal-content">
        <div class="form-modal-header"> <span class="form-close">&times;</span> </div>
        <div class="form-modal-body">
            <div class="mdl-grid back-end-content form-layout">
                <div class=" mdl-cell mdl-cell--4-col-phone mdl-cell--12-col-desktop mdl-cell--8-col-tablet ">
                    <div class="form-header">
                        <div class="mdl-typography--headline">Add Product</div>
                    </div>
                    <div class="form-content">
                        <form action="#" class="mdl-grid">
                        
                            <div class="mdl-cell mdl-cell--12-col">
                                <div class="mdl-textfield mdl-js-textfield  mdl-textfield--floating-label">
                                    <select id="txtAddProductType" class="product-type-change" required="required">

                                    </select>
                                    <label class="mdl-textfield__label" for="txtAddProductType">Produt Type</label>
                                </div>
                            </div>

                            <div class="mdl-cell mdl-cell--12-col">
                                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label ">
                                    <input class="mdl-textfield__input" placeholder="Product Name..." type="text" id="txtAddProductName">
                                    <label class="mdl-textfield__label" for="txtAddProductName">Product Name</label>
                                </div>

                            </div>

                            <div class="mdl-cell mdl-cell--12-col">
                                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label ">
                                    <input class="mdl-textfield__input" placeholder="Promotion Price..." type="text" id="txtAddProductPrice">
                                    <label class="mdl-textfield__label" for="txtAddProductPrice">Product Price</label>
                                </div>

                            </div>

                            <div class="mdl-cell mdl-cell--12-col">
                                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label ">
                                    <textarea class="mdl-textfield__input" placeholder="Product Description..." type="text" rows="3" id="txtAddProductDescription"></textarea>
                                    <label class="mdl-textfield__label" for="txtAddProductDescription">Product Description</label>
                                </div>
                            </div>

                            <div class="mdl-cell mdl-cell--12-col">
                                <br>
                                <a>
                                    <button type="button" onclick="return AddProduct();" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent mdl-color-text--white no-shadow"> SAVE </button>
                                </a>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript" src="/controllers/add/add_product.js"></script>
