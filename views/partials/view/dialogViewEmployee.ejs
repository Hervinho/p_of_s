<!-- The Modal  dialogViewEmployee -->
<div id="dialogViewEmployee" class="form-modal">
    <div class="form-modal-content">
        <div class="form-modal-header"> <span class="form-close">&times;</span> </div>
        <div class="form-modal-body">
            <div class="mdl-grid back-end-content form-layout">
                <div class=" mdl-cell mdl-cell--4-col-phone mdl-cell--12-col-desktop mdl-cell--8-col-tablet ">
                    <div class="form-header">
                        <div class="mdl-typography--headline">View Employee Info</div>
                    </div>
                    <div class="form-content">
                        <form action="#" class="mdl-grid">
                            <div class="mdl-cell mdl-cell--6-col">
                                <div class="mdl-textfield mdl-js-textfield  mdl-textfield--floating-label">
                                    <select id="txtViewEmployeeRole" class="employee-role-change" required="required">

                                    </select>
                                    <label class="mdl-textfield__label" for="txtViewEmployeeRole">Role</label>
                                </div>
                            </div>

                            <div class="mdl-cell mdl-cell--6-col">
                                <div class="mdl-textfield mdl-js-textfield  mdl-textfield--floating-label">
                                    <select disabled id="txtViewEmployeeGender" class="employee-gender-change" required="required">

                                    </select>
                                    <label class="mdl-textfield__label" for="txtViewEmployeeGender">Gender</label>
                                </div>
                            </div>

                            <div class="mdl-cell mdl-cell--6-col">
                                <div class="mdl-textfield mdl-js-textfield  mdl-textfield--floating-label">
                                    <select id="txtViewEmployeeStatus" class="employee-status-change" required="required">

                                    </select>
                                    <label class="mdl-textfield__label" for="txtViewEmployeeStatus">Status</label>
                                </div>
                            </div>

                            <div class="mdl-cell mdl-cell--6-col">
                                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label ">
                                    <input readonly="readonly" size="4" class="mdl-textfield__input" placeholder="I" type="text" id="txtViewEmployeeIdNumber">
                                    <label class="mdl-textfield__label" for="txtViewEmployeeIdNumber">ID Number</label>
                                </div>
                            </div>

                            <div class="mdl-cell mdl-cell--6-col">
                                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label ">
                                    <input readonly="readonly" class="datePicker mdl-textfield__input" placeholder="" type="text" id="txtViewEmployeeDOB"><!-- employee-date -->
                                    <label class="mdl-textfield__label" for="txtViewEmployeeDOB">Date of Birth</label>
                                </div>
                            </div>

                            <div class="mdl-cell mdl-cell--6-col">
                                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label ">
                                    <input readonly="readonly" size="4" class="mdl-textfield__input" placeholder="" type="text" id="txtViewEmployeeName">
                                    <label class="mdl-textfield__label" for="txtViewEmployeeName">Name</label>
                                </div>
                            </div>

                            <div class="mdl-cell mdl-cell--6-col">
                                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label ">
                                    <input readonly="readonly" class="mdl-textfield__input" placeholder="" type="text" id="txtViewEmployeeCode">
                                    <label class="mdl-textfield__label" for="txtViewEmployeeCode">Code</label>
                                </div>
                            </div>

                            <div class="mdl-cell mdl-cell--6-col">
                                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label ">
                                    <input readonly="readonly" class="mdl-textfield__input" placeholder="" type="text" id="txtViewEmployeePhone">
                                    <label class="mdl-textfield__label" for="txtViewEmployeePhone">Phone</label>
                                </div>
                            </div>

                            <div class="mdl-cell mdl-cell--6-col">
                                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label ">
                                    <input readonly="readonly" class="mdl-textfield__input" placeholder="" type="email" id="txtViewEmployeeEmail">
                                    <label class="mdl-textfield__label" for="txtViewEmployeeEmail">Email</label>
                                </div>
                            </div>

                            <div class="mdl-cell mdl-cell--12-col">
                                <br>
                                <a>
                                    <button type="button" onclick="return UpdateEmployee();" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent mdl-color-text--white no-shadow"> SAVE </button>
                                </a>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript" src="/controllers/update/update_employee.js"></script>
