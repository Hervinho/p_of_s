<!-- The Modal  dialogResetPassword -->
<div id="dialogResetPassword" class="form-modal">
    <div class="form-modal-content">
        <div class="form-modal-header"> <span class="form-close">&times;</span> </div>
        <div class="form-modal-body">
            <div class="mdl-grid back-end-content form-layout">
                <div class=" mdl-cell mdl-cell--4-col-phone mdl-cell--12-col-desktop mdl-cell--8-col-tablet ">
                    <div class="form-header">
                        <div class="mdl-typography--headline">Reset Your Password</div>
                    </div>
                    <div class="form-content">
                        <form action="#" class="mdl-grid">
                            <p>Password must be at least 8-character long, have at least 1 number and 1 special character.</p>
                            <div class="mdl-cell mdl-cell--12-col">
                                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label ">
                                    <input size="4" class="mdl-textfield__input" placeholder="Current Password..." type="password" id="txtViewEmployeeCurrentPass">
                                    <label class="mdl-textfield__label" for="txtViewEmployeeCurrentPass">Current Password</label>
                                </div>
                            </div>

                            <div class="mdl-cell mdl-cell--12-col">
                                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label ">
                                    <input class="mdl-textfield__input" placeholder="New Password..." type="password" id="txtViewEmployeeNewPass">
                                    <label class="mdl-textfield__label" for="txtViewEmployeeNewPass">New Password</label>
                                </div>

                            </div>

                            <div class="mdl-cell mdl-cell--12-col">
                                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label ">
                                    <input class="mdl-textfield__input" placeholder="Confirm New Password..." type="password" id="txtViewEmployeeConfirmNewPass">
                                    <label class="mdl-textfield__label" for="txtViewEmployeeConfirmNewPass">Confirm New Password</label>
                                </div>

                            </div>

                            <div class="mdl-cell mdl-cell--12-col">
                                <br>
                                <a>
                                    <button type="button" onclick="return ResetPassword();" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent mdl-color-text--white no-shadow"> SAVE </button>
                                </a>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript" src="/controllers/update/reset_password.js"></script>
